---
import Layout from '../layouts/Layout.astro';

const allPosts = await Astro.glob('./posts/*.astro');
allPosts.sort((a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime());
---
<Layout>
  <!-- Background Video -->
  <div class="fixed top-0 left-0 w-full h-screen -z-10 overflow-hidden">
    <video 
      autoplay 
      loop 
      muted 
      playsinline
      loading="lazy"
      class="min-w-full min-h-full w-auto h-auto absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 object-cover opacity-60"
    >
      <source src="/video/background.mp4" type="video/mp4">
    </video>
    <div class="absolute inset-0 bg-gradient-to-b from-gray-50/40 via-gray-50/50 to-gray-50/70 md:from-gray-50/30 md:via-gray-50/40 md:to-gray-50/60"></div>
  </div>

  <!-- Hero Section -->
  <div class="mb-20 pt-12 pb-16 text-center relative">
    <div class="space-y-6">
      <div class="mb-4 h-14"></div>
      
      <h1 class="text-5xl md:text-7xl font-display font-bold mb-6 leading-tight">
        <span class="block text-gray-900 mb-2">Kalyanamitta</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
        A collection of teachings, reflections, and insights on the path to enlightenment
      </p>
      
      <div class="flex flex-wrap justify-center gap-4 pt-6">
        <a href="/writings" class="group px-8 py-4 bg-monk-900 hover:bg-monk-800 text-white rounded-2xl font-medium shadow-lg transition-all">
          <span class="flex items-center gap-2">
            Explore Writings
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        <a href="/connect" class="px-8 py-4 bg-white border border-gray-300 hover:border-monk-900 text-gray-700 rounded-2xl font-medium hover:shadow-lg transition-all">
          Connect With Us
        </a>
      </div>
    </div>
  </div>

  <!-- Writings Section -->
  <div class="mb-12">
    <div class="flex items-center justify-between mb-8">
      <div class="flex items-center gap-4">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-gray-900">
          Writings
        </h2>
        <div class="flex-1 h-px bg-gradient-to-r from-monk-300/40 to-transparent"></div>
      </div>
      <a href="/writings" class="text-monk-900 font-medium hover:text-monk-700 flex items-center gap-2">
        View All
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
    
    <!-- Continuous Train Carousel -->
    <div class="relative overflow-hidden">
      <div class="flex gap-6" id="carousel">
        {allPosts.concat(allPosts).map((post, index) => (
          <div class="min-w-[280px] md:min-w-[420px] flex-shrink-0">
              <a 
                href={post.url} 
                class="group block bg-white rounded-3xl p-6 md:p-8 border border-gray-200 hover:border-monk-900 transition-all hover:shadow-xl relative"
              >
                <div class="space-y-4">
                  <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-gray-100 text-xs font-medium text-monk-900">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </div>
                  
                  <h3 class="text-2xl font-display font-semibold text-gray-900 group-hover:text-monk-900 transition-colors pr-14">
                    {post.frontmatter.title}
                  </h3>
                  
                  <p class="text-gray-600 line-clamp-2">
                    Discover profound insights and practical wisdom for your spiritual journey.
                  </p>
                  
                  <div class="flex items-center gap-2 text-monk-900 font-medium pt-2">
                    <span class="text-sm">Read more</span>
                    <svg class="w-4 h-4 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>

      <!-- Pause on Hover Indicator -->
      <div class="flex justify-center gap-2 mt-6">
        <p class="text-sm text-gray-500">Hover to pause</p>
      </div>
    </div>
  </div>

  <script>
    function initTrainCarousel() {
      const carousel = document.getElementById('carousel');
      if (!carousel) return;

      let scrollPosition = 0;
      let animationId;
      let isPaused = false;
      const speed = 0.5;

      function animate() {
        if (!isPaused) {
          scrollPosition += speed;
          const maxScroll = carousel.scrollWidth / 2;
          
          if (scrollPosition >= maxScroll) {
            scrollPosition = 0;
          }
          
          carousel.style.transform = `translateX(-${scrollPosition}px)`;
        }
        animationId = requestAnimationFrame(animate);
      }

      carousel.addEventListener('mouseenter', () => {
        isPaused = true;
      });

      carousel.addEventListener('mouseleave', () => {
        isPaused = false;
      });

      animate();
    }

    document.addEventListener('astro:page-load', initTrainCarousel);
  </script>

</Layout>