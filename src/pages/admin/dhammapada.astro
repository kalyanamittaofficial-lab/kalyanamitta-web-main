---
import AdminLayout from '../../layouts/AdminLayout.astro';

const user = Astro.locals.user;
const csrfToken = Astro.locals.csrfToken;

// Only admin can access Dhammapada management
if (!user || user.role !== 'admin') {
  return Astro.redirect('/admin/dashboard');
}
---

<AdminLayout title="Dhammapada Management - Admin">
  <div class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center py-4 gap-3">
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Dhammapada Management</h1>
          </div>
          <div class="flex flex-wrap items-center gap-2 w-full sm:w-auto">
            <a href="/" target="_blank" class="text-blue-600 hover:text-blue-700 font-medium text-xs sm:text-sm flex items-center gap-1 px-3 py-1.5 border border-blue-600 rounded-lg">
              <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              <span>Website</span>
            </a>
            <a href="/admin/dashboard" class="text-amber-600 hover:text-amber-700 font-medium text-xs sm:text-sm px-3 py-1.5 border border-amber-600 rounded-lg flex items-center gap-1">
              <span>‚Üê Dashboard</span>
            </a>
            <button id="logoutBtn" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-lg text-xs sm:text-sm font-medium transition">
              Logout
            </button>
          </div>
        </div>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <!-- Alert Messages -->
      <div id="alertContainer" class="mb-4"></div>

      <!-- Add New Quote Button -->
      <div class="mb-6">
        <button id="addNewBtn" class="bg-monk-900 hover:bg-monk-800 text-white px-4 py-2 rounded-lg font-medium transition flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add New Quote
        </button>
      </div>

      <!-- Quotes List -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">All Dhammapada Quotes</h2>
          <p class="text-sm text-gray-600 mt-1">Total: <span id="totalCount">0</span> quotes</p>
        </div>
        
        <div id="quotesContainer" class="divide-y divide-gray-200">
          <!-- Quotes will be loaded here -->
        </div>

        <div id="loadingState" class="px-6 py-12 text-center">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-monk-900"></div>
          <p class="mt-2 text-gray-600">Loading quotes...</p>
        </div>

        <div id="emptyState" class="px-6 py-12 text-center hidden">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No quotes</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding a new quote.</p>
        </div>
      </div>
    </main>
  </div>

  <!-- Modal for Add/Edit Quote -->
  <div id="quoteModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-full max-w-3xl shadow-lg rounded-lg bg-white">
      <div class="flex justify-between items-center mb-4">
        <h3 id="modalTitle" class="text-xl font-semibold text-gray-900">Add New Quote</h3>
        <button id="closeModal" class="text-gray-400 hover:text-gray-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <form id="quoteForm" class="space-y-4">
        <input type="hidden" id="quoteId" />
        
        <div>
          <label for="sinhala" class="block text-sm font-medium text-gray-700 mb-1">
            Sinhala Quote <span class="text-red-500">*</span>
          </label>
          <textarea
            id="sinhala"
            name="sinhala"
            rows="5"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-monk-900 focus:border-transparent"
            placeholder="Enter Sinhala translation..."
          ></textarea>
        </div>

        <div>
          <label for="english" class="block text-sm font-medium text-gray-700 mb-1">
            English Quote <span class="text-red-500">*</span>
          </label>
          <textarea
            id="english"
            name="english"
            rows="5"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-monk-900 focus:border-transparent"
            placeholder="Enter English translation..."
          ></textarea>
        </div>

        <div class="flex justify-end gap-3 pt-4">
          <button
            type="button"
            id="cancelBtn"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition"
          >
            Cancel
          </button>
          <button
            type="submit"
            class="px-4 py-2 bg-monk-900 hover:bg-monk-800 text-white rounded-lg transition"
          >
            Save Quote
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white">
      <div class="mt-3 text-center">
        <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
          <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mt-4">Delete Quote</h3>
        <p class="text-sm text-gray-500 mt-2">Are you sure you want to delete this quote? This action cannot be undone.</p>
        <div class="flex justify-center gap-3 mt-6">
          <button
            id="cancelDelete"
            class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition"
          >
            Cancel
          </button>
          <button
            id="confirmDelete"
            class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition"
          >
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    let quotes: any[] = [];
    let editingId: number | null = null;
    let deletingId: number | null = null;

    // Show alert message
    function showAlert(message: string, type: 'success' | 'error' | 'info' = 'info') {
      const container = document.getElementById('alertContainer');
      if (!container) return;

      const colors = {
        success: 'bg-green-50 text-green-800 border-green-200',
        error: 'bg-red-50 text-red-800 border-red-200',
        info: 'bg-blue-50 text-blue-800 border-blue-200'
      };

      const alert = document.createElement('div');
      alert.className = `${colors[type]} border rounded-lg px-4 py-3 mb-4 flex items-center justify-between`;
      alert.innerHTML = `
        <span>${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-4 text-current opacity-50 hover:opacity-100">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"/>
          </svg>
        </button>
      `;
      container.appendChild(alert);

      // Auto remove after 5 seconds
      setTimeout(() => alert.remove(), 5000);
    }

    // Load quotes
    async function loadQuotes() {
      try {
        const response = await fetch('/api/admin/dhammapada');
        if (!response.ok) throw new Error('Failed to load quotes');
        
        quotes = await response.json();
        renderQuotes();
      } catch (error) {
        console.error('Error loading quotes:', error);
        showAlert('Failed to load quotes', 'error');
        document.getElementById('loadingState')?.classList.add('hidden');
      }
    }

    // Render quotes
    function renderQuotes() {
      const container = document.getElementById('quotesContainer');
      const loadingState = document.getElementById('loadingState');
      const emptyState = document.getElementById('emptyState');
      const totalCount = document.getElementById('totalCount');

      if (!container) return;

      loadingState?.classList.add('hidden');

      if (quotes.length === 0) {
        container.innerHTML = '';
        emptyState?.classList.remove('hidden');
        if (totalCount) totalCount.textContent = '0';
        return;
      }

      emptyState?.classList.add('hidden');
      if (totalCount) totalCount.textContent = quotes.length.toString();

      container.innerHTML = quotes.map(quote => `
        <div class="px-6 py-4 hover:bg-gray-50 transition">
          <div class="flex justify-between items-start gap-4">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-xs font-semibold text-monk-900 bg-monk-100 px-2 py-1 rounded">ID: ${quote.id}</span>
              </div>
              <div class="space-y-3">
                <div>
                  <p class="text-xs font-medium text-gray-500 mb-1">Sinhala:</p>
                  <p class="text-sm text-gray-900">${quote.sinhala}</p>
                </div>
                <div>
                  <p class="text-xs font-medium text-gray-500 mb-1">English:</p>
                  <p class="text-sm text-gray-700">${quote.english}</p>
                </div>
              </div>
            </div>
            <div class="flex gap-2">
              <button
                onclick="editQuote(${quote.id})"
                class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition"
                title="Edit"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </button>
              <button
                onclick="deleteQuote(${quote.id})"
                class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition"
                title="Delete"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    // Open modal for adding new quote
    function openAddModal() {
      editingId = null;
      document.getElementById('modalTitle')!.textContent = 'Add New Quote';
      (document.getElementById('quoteForm') as HTMLFormElement).reset();
      document.getElementById('quoteId')!.value = '';
      document.getElementById('quoteModal')?.classList.remove('hidden');
    }

    // Edit quote
    (window as any).editQuote = function(id: number) {
      const quote = quotes.find(q => q.id === id);
      if (!quote) return;

      editingId = id;
      document.getElementById('modalTitle')!.textContent = 'Edit Quote';
      (document.getElementById('quoteId') as HTMLInputElement).value = id.toString();
      (document.getElementById('sinhala') as HTMLTextAreaElement).value = quote.sinhala;
      (document.getElementById('english') as HTMLTextAreaElement).value = quote.english;
      document.getElementById('quoteModal')?.classList.remove('hidden');
    };

    // Delete quote
    (window as any).deleteQuote = function(id: number) {
      deletingId = id;
      document.getElementById('deleteModal')?.classList.remove('hidden');
    };

    // Close modals
    function closeModal() {
      document.getElementById('quoteModal')?.classList.add('hidden');
      editingId = null;
    }

    function closeDeleteModal() {
      document.getElementById('deleteModal')?.classList.add('hidden');
      deletingId = null;
    }

    // Handle form submission
    async function handleSubmit(e: Event) {
      e.preventDefault();

      const sinhala = (document.getElementById('sinhala') as HTMLTextAreaElement).value.trim();
      const english = (document.getElementById('english') as HTMLTextAreaElement).value.trim();

      if (!sinhala || !english) {
        showAlert('Please fill in all required fields', 'error');
        return;
      }

      try {
        const method = editingId ? 'PUT' : 'POST';
        const body = editingId 
          ? { id: editingId, sinhala, english }
          : { sinhala, english };

        const response = await fetch('/api/admin/dhammapada', {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(body)
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to save quote');
        }

        const result = await response.json();
        showAlert(result.message, 'success');
        closeModal();
        await loadQuotes();
      } catch (error: any) {
        console.error('Error saving quote:', error);
        showAlert(error.message || 'Failed to save quote', 'error');
      }
    }

    // Handle delete confirmation
    async function handleDelete() {
      if (!deletingId) return;

      try {
        const response = await fetch('/api/admin/dhammapada', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id: deletingId })
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to delete quote');
        }

        const result = await response.json();
        showAlert(result.message, 'success');
        closeDeleteModal();
        await loadQuotes();
      } catch (error: any) {
        console.error('Error deleting quote:', error);
        showAlert(error.message || 'Failed to delete quote', 'error');
      }
    }

    // Logout handler
    async function handleLogout() {
      try {
        const response = await fetch('/api/auth/logout', { method: 'POST' });
        if (response.ok) {
          window.location.href = '/admin/login';
        }
      } catch (error) {
        console.error('Logout error:', error);
        showAlert('Failed to logout', 'error');
      }
    }

    // Event listeners
    document.addEventListener('DOMContentLoaded', () => {
      loadQuotes();

      document.getElementById('addNewBtn')?.addEventListener('click', openAddModal);
      document.getElementById('closeModal')?.addEventListener('click', closeModal);
      document.getElementById('cancelBtn')?.addEventListener('click', closeModal);
      document.getElementById('quoteForm')?.addEventListener('submit', handleSubmit);
      
      document.getElementById('cancelDelete')?.addEventListener('click', closeDeleteModal);
      document.getElementById('confirmDelete')?.addEventListener('click', handleDelete);
      
      document.getElementById('logoutBtn')?.addEventListener('click', handleLogout);

      // Close modal on outside click
      document.getElementById('quoteModal')?.addEventListener('click', (e) => {
        if (e.target === e.currentTarget) closeModal();
      });
      document.getElementById('deleteModal')?.addEventListener('click', (e) => {
        if (e.target === e.currentTarget) closeDeleteModal();
      });
    });
  </script>
</AdminLayout>
