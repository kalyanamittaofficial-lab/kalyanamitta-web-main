---
import AdminLayout from '../../layouts/AdminLayout.astro';

// This page is protected by middleware
const user = Astro.locals.user;
const csrfToken = Astro.locals.csrfToken;

// Read data files directly server-side
import newsData from '../../data/news.json';
import eventsData from '../../data/events.json';
import postsData from '../../data/posts.json';
import libraryData from '../../data/library.json';

const newsCount = newsData.length;
const eventsCount = eventsData.length;
const postsCount = postsData.length;
const libraryCount = libraryData.resources?.length || 0;

// Check if user can view statistics (admin role OR explicit permission)
const canViewStatistics = user?.role === 'admin' || user?.permissions?.viewStatistics === true;

// Helper function to check section access
const canAccessSection = (section: 'news' | 'events' | 'posts' | 'library') => {
  if (!user?.permissions) return false;
  const perms = user.permissions[section];
  if (!perms) return false;
  return perms.create || perms.edit || perms.delete || perms.publish;
};

// Check which sections user can access
const canAccessNews = canAccessSection('news');
const canAccessEvents = canAccessSection('events');
const canAccessPosts = canAccessSection('posts');
const canAccessLibrary = canAccessSection('library');

// Debug log (remove after testing)
console.log('Dashboard User:', user?.username, 'Role:', user?.role, 'canViewStatistics:', canViewStatistics);
console.log('Section Access:', { news: canAccessNews, events: canAccessEvents, posts: canAccessPosts, library: canAccessLibrary });
---

<AdminLayout title="Admin Dashboard - Kalyanamitta">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center py-4 gap-3">
          <div>
            <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-sm text-gray-600">Welcome, {user?.username}</p>
          </div>
          <div class="flex flex-wrap items-center gap-2 sm:gap-3 w-full sm:w-auto">
            <a href="/" target="_blank" class="text-blue-600 hover:text-blue-700 font-medium text-xs sm:text-sm flex items-center gap-1 px-3 py-1.5 sm:px-0 sm:py-0 border border-blue-600 sm:border-0 rounded-lg sm:rounded-none">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              <span>Website</span>
            </a>
            <button
              id="logoutBtn"
              class="bg-red-600 hover:bg-red-700 text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-lg text-xs sm:text-sm font-medium transition"
            >
              Logout
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Notifications Section -->
      <div id="notificationsSection" class="mb-8 hidden">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <h2 class="text-lg font-semibold text-gray-900">Notifications</h2>
            <span id="notificationCount" class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full">0</span>
          </div>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">By</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Reason</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody id="notificationsTable" class="bg-white divide-y divide-gray-200">
                <!-- Notifications will be loaded here -->
              </tbody>
            </table>
          </div>
          <!-- Pagination -->
          <div id="notificationsPagination" class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-700">
              Showing <span id="paginationStart">0</span> to <span id="paginationEnd">0</span> of <span id="paginationTotal">0</span> notifications
            </div>
            <div class="flex gap-2">
              <button id="prevPage" class="px-3 py-1 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                Previous
              </button>
              <button id="nextPage" class="px-3 py-1 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed">
                Next
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Stats Cards (Admin Only with viewStatistics permission) -->
      {canViewStatistics && (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        {canAccessNews && (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total News</p>
              <p class="text-2xl font-bold text-gray-900" id="newsCount" data-count={newsCount}>{newsCount}</p>
            </div>
            <div class="bg-blue-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
          </div>
        </div>
        )}

        {canAccessEvents && (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Events</p>
              <p class="text-2xl font-bold text-gray-900" id="eventsCount" data-count={eventsCount}>{eventsCount}</p>
            </div>
            <div class="bg-green-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
        </div>
        )}

        {canAccessPosts && (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Posts</p>
              <p class="text-2xl font-bold text-gray-900" id="postsCount" data-count={postsCount}>{postsCount}</p>
            </div>
            <div class="bg-purple-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>
        )}

        {canAccessLibrary && (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Library Items</p>
              <p class="text-2xl font-bold text-gray-900" id="libraryCount" data-count={libraryCount}>{libraryCount}</p>
            </div>
            <div class="bg-amber-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>
        )}
      </div>
      )}

      <!-- No Access Message for Moderators -->
      {!canViewStatistics && (
        <div class="bg-blue-50 border-l-4 border-blue-400 p-6 mb-8">
          <div class="flex items-start">
            <svg class="w-6 h-6 text-blue-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="text-lg font-semibold text-blue-900 mb-2">Welcome to Admin Panel</h3>
              <p class="text-blue-700">You can manage content using the sections below. Statistics are available to administrators only.</p>
            </div>
          </div>
        </div>
      )}

      <!-- Charts Section (Admin Only with viewStatistics permission) -->
      {canViewStatistics && (
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Bar Chart -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Content Overview</h3>
          <div style="height: 300px;">
            <canvas id="statsBarChart"></canvas>
          </div>
        </div>

        <!-- Doughnut Chart -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Content Distribution</h3>
          <div style="height: 300px;">
            <canvas id="statsDoughnutChart"></canvas>
          </div>
        </div>
      </div>
      )}

      <!-- System Management Section (Admin Only) -->
      {user?.role === 'admin' && user?.permissions?.manageUsers && (
        <div class="mb-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">System Management</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <a href="/admin/users" class="block bg-gradient-to-br from-purple-500 to-purple-700 p-6 rounded-xl shadow-md hover:shadow-lg transition group text-white">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-semibold">User Management</h3>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              <p class="text-sm text-purple-100">Manage moderators and permissions</p>
            </a>

            <a href="/admin/pending-changes" class="block bg-gradient-to-br from-orange-500 to-orange-700 p-6 rounded-xl shadow-md hover:shadow-lg transition group text-white">
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-2">
                  <h3 class="text-lg font-semibold">Pending Changes</h3>
                  {import('../../data/pending-changes.json').then(data => data.default.length > 0 && (
                    <span class="bg-white text-orange-700 text-xs font-bold px-2 py-1 rounded-full">
                      {data.default.length}
                    </span>
                  ))}
                </div>
                <svg class="w-5 h-5 group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              <p class="text-sm text-orange-100">Review and approve submissions</p>
            </a>
          </div>
        </div>
      )}

      {user?.permissions?.approveChanges && user?.role !== 'admin' && (
        <div class="mb-8">
          <a href="/admin/pending-changes" class="block bg-gradient-to-br from-orange-500 to-orange-700 p-6 rounded-xl shadow-md hover:shadow-lg transition group text-white">
            <div class="flex items-center justify-between mb-3">
              <div class="flex items-center gap-2">
                <h3 class="text-lg font-semibold">Pending Changes</h3>
              </div>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
            <p class="text-sm text-orange-100">Review and approve submissions</p>
          </a>
        </div>
      )}

      <!-- Content Management Sections -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- News Management -->
        {canAccessNews && (
        <a href="/admin/news" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">News Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Create, edit, and manage news articles</p>
        </a>
        )}

        <!-- Events Management -->
        {canAccessEvents && (
        <a href="/admin/events" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Events Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage upcoming and past events</p>
        </a>
        )}

        <!-- Posts Management -->
        {canAccessPosts && (
        <a href="/admin/posts" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Posts Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Write and publish blog posts</p>
        </a>
        )}

        <!-- Library Management -->
        {canAccessLibrary && (
        <a href="/admin/library" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Library Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage library resources and materials</p>
        </a>
        )}
      </div>
    </main>
  </div>

  <script define:vars={{ csrfToken }}>
    // Store CSRF token
    sessionStorage.setItem('csrfToken', csrfToken);

    // Logout functionality
    document.getElementById('logoutBtn')?.addEventListener('click', async () => {
      try {
        await fetch('/api/auth/logout', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken
          }
        });
        window.location.href = '/admin/login';
      } catch (error) {
        console.error('Logout failed:', error);
      }
    });

    // Notifications Management
    let notifications = [];
    let currentPage = 1;
    const itemsPerPage = 6;

    async function loadNotifications() {
      try {
        const response = await fetch('/api/admin/notifications');
        if (response.ok) {
          notifications = await response.json();
          
          if (notifications.length > 0) {
            document.getElementById('notificationsSection').classList.remove('hidden');
            renderNotifications();
          } else {
            document.getElementById('notificationsSection').classList.add('hidden');
          }
        }
      } catch (error) {
        console.error('Error loading notifications:', error);
      }
    }

    function renderNotifications() {
      const start = (currentPage - 1) * itemsPerPage;
      const end = start + itemsPerPage;
      const pageNotifications = notifications.slice(start, end);
      
      const tbody = document.getElementById('notificationsTable');
      tbody.innerHTML = '';
      
      pageNotifications.forEach(notif => {
        const row = document.createElement('tr');
        
        const statusColor = notif.status === 'approved' ? 'green' : 'red';
        const statusIcon = notif.status === 'approved' ? '✓' : '✗';
        
        const timeAgo = getTimeAgo(new Date(notif.createdAt));
        
        row.innerHTML = `
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-${statusColor}-100 text-${statusColor}-800">
              ${statusIcon} ${notif.status}
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 capitalize">${notif.type}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 capitalize">${notif.action}</td>
          <td class="px-6 py-4 text-sm text-gray-900">${notif.itemTitle}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${notif.approvedBy}</td>
          <td class="px-6 py-4 text-sm text-gray-500">${notif.reason || '-'}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${timeAgo}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <button onclick="dismissNotification('${notif.id}')" class="text-red-600 hover:text-red-800 font-medium">
              Dismiss
            </button>
          </td>
        `;
        
        tbody.appendChild(row);
      });
      
      // Update count and pagination
      document.getElementById('notificationCount').textContent = notifications.length;
      document.getElementById('paginationStart').textContent = notifications.length > 0 ? start + 1 : 0;
      document.getElementById('paginationEnd').textContent = Math.min(end, notifications.length);
      document.getElementById('paginationTotal').textContent = notifications.length;
      
      // Update pagination buttons
      document.getElementById('prevPage').disabled = currentPage === 1;
      document.getElementById('nextPage').disabled = end >= notifications.length;
    }

    function getTimeAgo(date) {
      const seconds = Math.floor((new Date() - date) / 1000);
      
      if (seconds < 60) return 'just now';
      const minutes = Math.floor(seconds / 60);
      if (minutes < 60) return `${minutes}m ago`;
      const hours = Math.floor(minutes / 60);
      if (hours < 24) return `${hours}h ago`;
      const days = Math.floor(hours / 24);
      return `${days}d ago`;
    }

    window.dismissNotification = async function(id) {
      try {
        const response = await fetch(`/api/admin/notifications?id=${id}`, {
          method: 'DELETE'
        });
        
        if (response.ok) {
          notifications = notifications.filter(n => n.id !== id);
          
          // Adjust current page if needed
          const maxPage = Math.ceil(notifications.length / itemsPerPage);
          if (currentPage > maxPage && maxPage > 0) {
            currentPage = maxPage;
          }
          
          if (notifications.length === 0) {
            document.getElementById('notificationsSection').classList.add('hidden');
          } else {
            renderNotifications();
          }
        }
      } catch (error) {
        console.error('Error dismissing notification:', error);
      }
    };

    // Pagination handlers
    document.getElementById('prevPage')?.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        renderNotifications();
      }
    });

    document.getElementById('nextPage')?.addEventListener('click', () => {
      const maxPage = Math.ceil(notifications.length / itemsPerPage);
      if (currentPage < maxPage) {
        currentPage++;
        renderNotifications();
      }
    });

    // Load notifications on page load
    loadNotifications();
    
    // Refresh notifications every 30 seconds
    setInterval(loadNotifications, 30000);
  </script>

  <script>
    import Chart from 'chart.js/auto';
    
    // Get data from data attributes
    const newsCount = parseInt(document.getElementById('newsCount')?.dataset.count || '0');
    const eventsCount = parseInt(document.getElementById('eventsCount')?.dataset.count || '0');
    const postsCount = parseInt(document.getElementById('postsCount')?.dataset.count || '0');
    const libraryCount = parseInt(document.getElementById('libraryCount')?.dataset.count || '0');

    console.log('Chart.js imported successfully');
    console.log('Data from attributes:', { newsCount, eventsCount, postsCount, libraryCount });

    // Initialize charts with data
    function initCharts() {
      console.log('initCharts called');

      try {

        // Bar Chart
        const barCanvas = document.getElementById('statsBarChart');
        console.log('Bar canvas element:', barCanvas);
        
        if (barCanvas) {
          const barCtx = barCanvas.getContext('2d');
          console.log('Bar context:', barCtx);
          
          if (barCtx) {
            console.log('Creating bar chart...');
            new Chart(barCtx, {
              type: 'bar',
              data: {
                labels: ['News', 'Events', 'Posts', 'Library'],
                datasets: [{
                  label: 'Total Items',
                  data: [newsCount, eventsCount, postsCount, libraryCount],
                  backgroundColor: [
                    'rgba(59, 130, 246, 0.8)',
                    'rgba(34, 197, 94, 0.8)',
                    'rgba(168, 85, 247, 0.8)',
                    'rgba(251, 191, 36, 0.8)'
                  ],
                  borderColor: [
                    'rgb(59, 130, 246)',
                    'rgb(34, 197, 94)',
                    'rgb(168, 85, 247)',
                    'rgb(251, 191, 36)'
                  ],
                  borderWidth: 2
                }]
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: false }
                },
                scales: {
                  y: {
                    beginAtZero: true,
                    ticks: { 
                      stepSize: 1,
                      precision: 0
                    }
                  }
                }
              }
            });
            console.log('Bar chart created successfully');
          }
        } else {
          console.error('Bar canvas not found!');
        }

        // Doughnut Chart
        const doughnutCanvas = document.getElementById('statsDoughnutChart');
