---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  {
    title: 'üí¨ Join the Community',
    subtitle: 'Kalyanamitta WhatsApp Channel',
    description: 'Get immediate updates on new teachings, live event schedules, and join our private community discussion.',
    url: 'https://whatsapp.com/channel/0029VavxFoNEUWAYzJJdPV39',
    icon: 'whatsapp'
  },
  {
    title: 'üé¨ Watch the Teachings',
    subtitle: 'Our YouTube Channel',
    description: 'Long-form video teachings, guided meditations, and in-depth Dharma talks.',
    url: 'https://youtube.com/@kalyanamitta',
    icon: 'youtube'
  },
  {
    title: '‚è±Ô∏è Daily Wisdom',
    subtitle: 'Our TikTok',
    description: 'Daily wisdom, short reflections, and quick answers to common questions.',
    url: 'https://tiktok.com/@kalyanamitta',
    icon: 'tiktok'
  },
  {
    title: '‚úâÔ∏è Get in Touch',
    subtitle: 'Email Us',
    description: 'For personal questions or collaboration requests.',
    url: 'mailto:kalyanamitta.contact@gmail.com',
    email: 'kalyanamitta.contact@gmail.com',
    icon: 'email'
  }
];
---
<Layout>
  <div class="mb-12 pt-8">
    <h1 class="text-4xl md:text-5xl font-display font-bold text-gray-900 mb-4">Connect with Us</h1>
    <p class="text-lg text-gray-600">
      We share Dharma in many ways. Find the path that best suits your journey.
    </p>
  </div>

  <div class="grid gap-6 md:grid-cols-2">
    {socialLinks.map(link => (
      <a 
        href={link.url} 
        target={link.icon !== 'email' ? '_blank' : undefined}
        rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
        class="group block p-6 bg-white border-2 border-gray-200 rounded-2xl hover:border-monk-900 hover:shadow-xl transition-all"
      >
        <h2 class="text-2xl font-display font-semibold text-gray-900 mb-2 group-hover:text-monk-900 transition-colors">
          {link.title}
        </h2>
        <h3 class="text-lg font-medium text-gray-700 mb-3">
          {link.subtitle}
        </h3>
        <p class="text-gray-600 mb-4">
          {link.description}
        </p>
        {link.email && (
          <p class="text-lg font-semibold text-monk-900">
            {link.email}
          </p>
        )}
      </a>
    ))}
  </div>

</Layout>