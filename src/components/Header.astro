<script>
  function setupMobileMenu() {
    const elements = {
      button: document.getElementById('mobile-menu-button'),
      overlay: document.getElementById('mobile-menu-overlay'),
      menu: document.getElementById('mobile-menu'),
      close: document.getElementById('mobile-menu-close'),
      backdrop: document.getElementById('mobile-menu-backdrop'),
      menuIcon: document.getElementById('menu-icon'),
      closeIcon: document.getElementById('close-icon')
    };

    if (!elements.button) return;

    let isOpen = false;

    const openMenu = () => {
      if (isOpen) return;
      isOpen = true;

      elements.overlay?.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      
      requestAnimationFrame(() => {
        elements.menu?.classList.remove('translate-x-full');
        elements.menu?.classList.add('translate-x-0');
      });

      elements.menuIcon?.classList.add('hidden');
      elements.closeIcon?.classList.remove('hidden');
      elements.button?.setAttribute('aria-expanded', 'true');
    };

    const closeMenu = () => {
      if (!isOpen) return;
      isOpen = false;

      elements.menu?.classList.remove('translate-x-0');
      elements.menu?.classList.add('translate-x-full');
      elements.menuIcon?.classList.remove('hidden');
      elements.closeIcon?.classList.add('hidden');
      elements.button?.setAttribute('aria-expanded', 'false');

      setTimeout(() => {
        elements.overlay?.classList.add('hidden');
        document.body.style.overflow = '';
      }, 300);
    };

    const toggleMenu = () => {
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    };

    elements.button.addEventListener('click', toggleMenu);
    elements.close?.addEventListener('click', closeMenu);
    elements.backdrop?.addEventListener('click', closeMenu);

    // Close menu on navigation
    const navLinks = elements.menu?.querySelectorAll('a');
    navLinks?.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && isOpen) {
        closeMenu();
      }
    });
  }

  document.addEventListener('astro:page-load', setupMobileMenu);

  // Language Switcher
  function setupLanguageSwitcher() {
    const toggleDesktop = document.getElementById('lang-toggle-desktop');
    const toggleMobile = document.getElementById('lang-toggle-mobile');
    const sinDesktop = document.getElementById('lang-sin-desktop');
    const engDesktop = document.getElementById('lang-eng-desktop');
    const sinMobile = document.getElementById('lang-sin-mobile');
    const engMobile = document.getElementById('lang-eng-mobile');

    // Get current language from localStorage or default to Sinhala
    const getCurrentLanguage = () => {
      return localStorage.getItem('language') || 'sinhala';
    };

    // Set language
    const setLanguage = (lang: string) => {
      localStorage.setItem('language', lang);
      updateUI(lang);
      // Dispatch custom event for other components
      window.dispatchEvent(new CustomEvent('languageChanged', { detail: { language: lang } }));
    };

    // Update UI based on language
    const updateUI = (lang: string) => {
      const isEnglish = lang === 'english';
      
      // Desktop
      if (toggleDesktop) {
        const toggle = toggleDesktop.querySelector('span');
        if (toggle) {
          toggle.style.transform = isEnglish ? 'translateX(24px)' : 'translateX(0)';
        }
        toggleDesktop.setAttribute('aria-checked', isEnglish.toString());
      }
      
      if (sinDesktop && engDesktop) {
        sinDesktop.classList.toggle('text-monk-900', !isEnglish);
        sinDesktop.classList.toggle('text-gray-500', isEnglish);
        engDesktop.classList.toggle('text-monk-900', isEnglish);
        engDesktop.classList.toggle('text-gray-500', !isEnglish);
      }

      // Mobile
      if (toggleMobile) {
        const toggle = toggleMobile.querySelector('span');
        if (toggle) {
          toggle.style.transform = isEnglish ? 'translateX(28px)' : 'translateX(0)';
        }
        toggleMobile.setAttribute('aria-checked', isEnglish.toString());
      }
      
      if (sinMobile && engMobile) {
        sinMobile.classList.toggle('text-monk-900', !isEnglish);
        sinMobile.classList.toggle('text-gray-500', isEnglish);
        engMobile.classList.toggle('text-monk-900', isEnglish);
        engMobile.classList.toggle('text-gray-500', !isEnglish);
      }
    };

    // Toggle language
    const toggleLanguage = () => {
      const currentLang = getCurrentLanguage();
      const newLang = currentLang === 'sinhala' ? 'english' : 'sinhala';
      setLanguage(newLang);
    };

    // Event listeners with passive for better scroll performance
    toggleDesktop?.addEventListener('click', toggleLanguage, { passive: true });
    toggleMobile?.addEventListener('click', toggleLanguage, { passive: true });
    sinDesktop?.addEventListener('click', () => setLanguage('sinhala'), { passive: true });
    engDesktop?.addEventListener('click', () => setLanguage('english'), { passive: true });
    sinMobile?.addEventListener('click', () => setLanguage('sinhala'), { passive: true });
    engMobile?.addEventListener('click', () => setLanguage('english'), { passive: true });

    // Initialize UI
    updateUI(getCurrentLanguage());
  }

  document.addEventListener('astro:page-load', setupLanguageSwitcher);
</script>