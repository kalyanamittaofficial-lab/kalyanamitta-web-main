---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<html lang="en" class="h-full scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Buddhist wisdom and teachings for spiritual growth and enlightenment" />
    <title>Kalyanamitta - Buddhist Wisdom & Teachings</title>
    
    <ViewTransitions />

    <link rel="icon" type="image/png" href="/logo.png" />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@600;700;800&display=swap" rel="stylesheet">
    

  </head>
  
  <body class="h-full flex flex-col bg-gray-50 text-gray-900 font-sans antialiased">

    <Header />

    <main 
      class="flex-1 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
      transition:name="page-content"
    >
      <slot />
    </main>

    <Footer />

    <script>
      function addBreadcrumb() {
        const currentPath = window.location.pathname;
        if (!currentPath.includes('/posts/')) return;
        
        const main = document.querySelector('main');
        if (!main || main.querySelector('.breadcrumb-nav')) return;
        
        const breadcrumb = document.createElement('div');
        breadcrumb.className = 'breadcrumb-nav mb-6';
        breadcrumb.innerHTML = `
          <a href="/writings" class="inline-flex items-center gap-2 text-monk-900 hover:text-monk-700 font-medium group transition-colors">
            <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Writings
          </a>
        `;
        main.prepend(breadcrumb);
      }

      document.addEventListener('astro:page-load', addBreadcrumb);
    </script>

  </body>
</html>