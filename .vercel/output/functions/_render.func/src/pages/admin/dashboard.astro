---
import Layout from '../../layouts/Layout.astro';

// This page is protected by middleware
const user = Astro.locals.user;
const csrfToken = Astro.locals.csrfToken;
---

<Layout title="Admin Dashboard - Kalyanamitta">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-sm text-gray-600">Welcome, {user?.username}</p>
          </div>
          <div class="flex items-center space-x-4">
            <a href="/" class="text-amber-600 hover:text-amber-700 font-medium text-sm">
              View Website
            </a>
            <button
              id="logoutBtn"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition"
            >
              Logout
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total News</p>
              <p class="text-2xl font-bold text-gray-900" id="newsCount">0</p>
            </div>
            <div class="bg-blue-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Events</p>
              <p class="text-2xl font-bold text-gray-900" id="eventsCount">0</p>
            </div>
            <div class="bg-green-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Posts</p>
              <p class="text-2xl font-bold text-gray-900" id="postsCount">0</p>
            </div>
            <div class="bg-purple-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Library Items</p>
              <p class="text-2xl font-bold text-gray-900" id="libraryCount">0</p>
            </div>
            <div class="bg-amber-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Management Sections -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- News Management -->
        <a href="/admin/news" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">News Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-amber-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Create, edit, and manage news articles</p>
        </a>

        <!-- Events Management -->
        <a href="/admin/events" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Events Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-amber-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage upcoming and past events</p>
        </a>

        <!-- Posts Management -->
        <a href="/admin/posts" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Posts Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-amber-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Write and publish blog posts</p>
        </a>

        <!-- Library Management -->
        <a href="/admin/library" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Library Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-amber-600 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage library resources and materials</p>
        </a>
      </div>
    </main>
  </div>

  <script define:vars={{ csrfToken }}>
    // Store CSRF token
    sessionStorage.setItem('csrfToken', csrfToken);

    // Logout functionality
    document.getElementById('logoutBtn')?.addEventListener('click', async () => {
      try {
        await fetch('/api/auth/logout', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken
          }
        });
        window.location.href = '/admin/login';
      } catch (error) {
        console.error('Logout failed:', error);
      }
    });

    // Load stats
    async function loadStats() {
      try {
        const [news, events, posts, library] = await Promise.all([
          fetch('/api/admin/news', {
            headers: {
              'Authorization': `Bearer ${document.cookie.split('auth_token=')[1]}`
            }
          }).then(r => r.json()),
          fetch('/api/admin/events', {
            headers: {
              'Authorization': `Bearer ${document.cookie.split('auth_token=')[1]}`
            }
          }).then(r => r.json()),
          fetch('/api/admin/posts', {
            headers: {
              'Authorization': `Bearer ${document.cookie.split('auth_token=')[1]}`
            }
          }).then(r => r.json()),
          fetch('/api/admin/library', {
            headers: {
              'Authorization': `Bearer ${document.cookie.split('auth_token=')[1]}`
            }
          }).then(r => r.json())
        ]);

        const newsCount = document.getElementById('newsCount');
        const eventsCount = document.getElementById('eventsCount');
        const postsCount = document.getElementById('postsCount');
        const libraryCount = document.getElementById('libraryCount');

        if (newsCount) newsCount.textContent = Array.isArray(news) ? news.length.toString() : '0';
        if (eventsCount) eventsCount.textContent = Array.isArray(events) ? events.length.toString() : '0';
        if (postsCount) postsCount.textContent = Array.isArray(posts) ? posts.length.toString() : '0';
        if (libraryCount) libraryCount.textContent = Array.isArray(library) ? library.length.toString() : '0';
      } catch (error) {
        console.error('Failed to load stats:', error);
      }
    }

    loadStats();
  </script>
</Layout>
