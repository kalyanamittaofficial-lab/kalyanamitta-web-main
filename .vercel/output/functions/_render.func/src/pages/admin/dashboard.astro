---
import AdminLayout from '../../layouts/AdminLayout.astro';

// This page is protected by middleware
const user = Astro.locals.user;
const csrfToken = Astro.locals.csrfToken;
---

<AdminLayout title="Admin Dashboard - Kalyanamitta">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-sm text-gray-600">Welcome, {user?.username}</p>
          </div>
          <div class="flex items-center space-x-3">
            <a href="/" target="_blank" class="text-blue-600 hover:text-blue-700 font-medium text-sm flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              Website
            </a>
            <button
              id="logoutBtn"
              class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition"
            >
              Logout
            </button>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total News</p>
              <p class="text-2xl font-bold text-gray-900" id="newsCount">0</p>
            </div>
            <div class="bg-blue-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Events</p>
              <p class="text-2xl font-bold text-gray-900" id="eventsCount">0</p>
            </div>
            <div class="bg-green-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Total Posts</p>
              <p class="text-2xl font-bold text-gray-900" id="postsCount">0</p>
            </div>
            <div class="bg-purple-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600 mb-1">Library Items</p>
              <p class="text-2xl font-bold text-gray-900" id="libraryCount">0</p>
            </div>
            <div class="bg-amber-100 p-3 rounded-lg">
              <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Charts Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Bar Chart -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div style="height: 300px;">
            <canvas id="statsBarChart"></canvas>
          </div>
        </div>

        <!-- Doughnut Chart -->
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
          <div style="height: 300px;">
            <canvas id="statsDoughnutChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Content Management Sections -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- News Management -->
        <a href="/admin/news" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">News Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Create, edit, and manage news articles</p>
        </a>

        <!-- Events Management -->
        <a href="/admin/events" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Events Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage upcoming and past events</p>
        </a>

        <!-- Posts Management -->
        <a href="/admin/posts" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Posts Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Write and publish blog posts</p>
        </a>

        <!-- Library Management -->
        <a href="/admin/library" class="block bg-white p-6 rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition group">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900">Library Management</h2>
            <svg class="w-5 h-5 text-gray-400 group-hover:text-[#8E050F] transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <p class="text-sm text-gray-600">Manage library resources and materials</p>
        </a>
      </div>
    </main>
  </div>

  <script define:vars={{ csrfToken }}>
    // Store CSRF token
    sessionStorage.setItem('csrfToken', csrfToken);

    // Logout functionality
    document.getElementById('logoutBtn')?.addEventListener('click', async () => {
      try {
        await fetch('/api/auth/logout', {
          method: 'POST',
          headers: {
            'X-CSRF-Token': csrfToken
          }
        });
        window.location.href = '/admin/login';
      } catch (error) {
        console.error('Logout failed:', error);
      }
    });

    // Fetch stats data once and use for both display and charts
    async function fetchStats() {
      const authToken = document.cookie.split('auth_token=')[1]?.split(';')[0];
      if (!authToken) {
        console.error('No auth token found');
        return { newsCount: 0, eventsCount: 0, postsCount: 0, libraryCount: 0 };
      }

      try {
        const [news, events, posts, library] = await Promise.all([
          fetch('/api/admin/news', {
            headers: { 'Authorization': `Bearer ${authToken}` }
          }).then(async r => {
            if (r.status === 429) throw new Error('RATE_LIMITED');
            if (!r.ok) throw new Error(`HTTP ${r.status}`);
            return r.json();
          }),
          fetch('/api/admin/events', {
            headers: { 'Authorization': `Bearer ${authToken}` }
          }).then(async r => {
            if (r.status === 429) throw new Error('RATE_LIMITED');
            if (!r.ok) throw new Error(`HTTP ${r.status}`);
            return r.json();
          }),
          fetch('/api/admin/posts', {
            headers: { 'Authorization': `Bearer ${authToken}` }
          }).then(async r => {
            if (r.status === 429) throw new Error('RATE_LIMITED');
            if (!r.ok) throw new Error(`HTTP ${r.status}`);
            return r.json();
          }),
          fetch('/api/admin/library', {
            headers: { 'Authorization': `Bearer ${authToken}` }
          }).then(async r => {
            if (r.status === 429) throw new Error('RATE_LIMITED');
            if (!r.ok) throw new Error(`HTTP ${r.status}`);
            return r.json();
          })
        ]);

        return {
          newsCount: Array.isArray(news) ? news.length : 0,
          eventsCount: Array.isArray(events) ? events.length : 0,
          postsCount: Array.isArray(posts) ? posts.length : 0,
          libraryCount: Array.isArray(library) ? library.length : 0
        };
      } catch (error) {
        if (error.message === 'RATE_LIMITED') {
          console.warn('Rate limited, retrying in 2 seconds...');
          await new Promise(resolve => setTimeout(resolve, 2000));
          return fetchStats();
        }
        console.error('Failed to fetch stats:', error);
        return { newsCount: 0, eventsCount: 0, postsCount: 0, libraryCount: 0 };
      }
    }

    // Update stat cards
    function updateStatCards(data) {
      const newsCount = document.getElementById('newsCount');
      const eventsCount = document.getElementById('eventsCount');
      const postsCount = document.getElementById('postsCount');
      const libraryCount = document.getElementById('libraryCount');

      if (newsCount) newsCount.textContent = data.newsCount.toString();
      if (eventsCount) eventsCount.textContent = data.eventsCount.toString();
      if (postsCount) postsCount.textContent = data.postsCount.toString();
      if (libraryCount) libraryCount.textContent = data.libraryCount.toString();
    }

    // Initialize charts with data
    function initCharts(data) {
      if (typeof Chart === 'undefined') {
        console.error('Chart.js not loaded');
        return;
      }

      try {
        const { newsCount, eventsCount, postsCount, libraryCount } = data;

        // Bar Chart
        const barCtx = document.getElementById('statsBarChart')?.getContext('2d');
        if (barCtx) {
          new Chart(barCtx, {
            type: 'bar',
            data: {
              labels: ['News', 'Events', 'Posts', 'Library'],
              datasets: [{
                label: 'Total Items',
                data: [newsCount, eventsCount, postsCount, libraryCount],
                backgroundColor: [
                  'rgba(142, 5, 15, 0.8)',
                  'rgba(153, 27, 27, 0.8)',
                  'rgba(185, 28, 28, 0.8)',
                  'rgba(220, 38, 38, 0.8)'
                ],
                borderColor: ['rgb(142, 5, 15)', 'rgb(153, 27, 27)', 'rgb(185, 28, 28)', 'rgb(220, 38, 38)'],
                borderWidth: 2
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: { display: false },
                title: {
                  display: true,
                  text: 'Content Overview',
                  font: { size: 16, weight: 'bold' }
                }
              },
              scales: {
                y: {
                  beginAtZero: true,
                  ticks: { stepSize: 1 }
                }
              }
            }
          });
        }

        // Doughnut Chart
        const doughnutCtx = document.getElementById('statsDoughnutChart')?.getContext('2d');
        if (doughnutCtx) {
          new Chart(doughnutCtx, {
            type: 'doughnut',
            data: {
              labels: ['News', 'Events', 'Posts', 'Library'],
              datasets: [{
                data: [newsCount, eventsCount, postsCount, libraryCount],
                backgroundColor: [
                  'rgba(142, 5, 15, 0.8)',
                  'rgba(153, 27, 27, 0.8)',
                  'rgba(185, 28, 28, 0.8)',
                  'rgba(220, 38, 38, 0.8)'
                ],
                borderColor: '#ffffff',
                borderWidth: 3
              }]
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              plugins: {
                legend: {
                  position: 'bottom',
                  labels: { padding: 15, font: { size: 12 } }
                },
                title: {
                  display: true,
                  text: 'Content Distribution',
                  font: { size: 16, weight: 'bold' }
                }
              }
            }
          });
        }
      } catch (error) {
        console.error('Failed to init charts:', error);
      }
    }

    // Main initialization function
    async function init() {
      try {
        console.log('Initializing dashboard...');
        const data = await fetchStats();
        console.log('Stats data:', data);
        updateStatCards(data);
        
        // Wait for Chart.js to be available
        if (typeof Chart !== 'undefined') {
          console.log('Chart.js loaded, initializing charts...');
          initCharts(data);
        } else {
          console.warn('Chart.js not loaded yet, waiting...');
          setTimeout(() => {
            if (typeof Chart !== 'undefined') {
              console.log('Chart.js loaded after delay, initializing charts...');
              initCharts(data);
            } else {
              console.error('Chart.js failed to load');
            }
          }, 1000);
        }
      } catch (error) {
        console.error('Failed to initialize dashboard:', error);
      }
    }

    // Initialize everything after DOM and Chart.js are ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  </script>

  <!-- Chart.js CDN - Load before initialization -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
</AdminLayout>
